<fw:Container xmlns:fx="http://ns.adobe.com/mxml/2009"
			  xmlns:s="library://ns.adobe.com/flex/spark" 
			  xmlns:fw="http://artman.fi/flow"
			  width="500" height="300">
	
	<fw:states>
		<s:State name="out" transitionSpeed="2" />
		<s:State name="over" transitionSpeed="2" />
	</fw:states>

	<fw:Button horizontalCenter="0" snapToEventWidth="true" verticalCenter="0" width="200" width.over="400" label="Roll over me to change state" rollOver="currentState='over'" rollOut="currentState='out'" />
	
</fw:Container>
