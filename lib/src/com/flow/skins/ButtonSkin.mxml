<?xml version="1.0" encoding="utf-8"?>
<fw:Skin xmlns:fx="http://ns.adobe.com/mxml/2009"
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:fw="http://artman.fi/flow" enterFrame="ef()">	
	
	<fx:Metadata>
		[HostComponent("com.flow.components.Button")]
	</fx:Metadata>
	
	<fx:Script>
		<![CDATA[
			override public function draw(width:int, height:int):void {
				super.draw(width, height);
			}
			
			private function ef():void {
				invalidateLayout();
			}
			
			override public function validateLayout(e:Event=null):void {
				trace(1);
				super.validateLayout(e);
				trace("VAlidate layout");
			}
		]]>
	</fx:Script>
	
	<fw:states>
		<s:State name="normal" />
		<s:State name="hover" />
		<s:State name="down" />
		<s:State name="disabled" />
	</fw:states>
	
	<fw:background>
		<fw:GradientFill rotation="90">
			<fw:GradientData color="0xFFFFFF" ratio="0" />
			<fw:GradientData color="0xDDDDDD" ratio="1" />
		</fw:GradientFill>
	</fw:background>
	
	
		
	<fw:Rect width="100%" height="100%" radius="3" >
		<fw:fill>
			<fw:GradientFill rotation="90">
				<fw:GradientData color="0xFFFFFF" ratio="0" />
				<fw:GradientData color="0xDDDDDD" ratio="1" />
			</fw:GradientFill>
		</fw:fill>
		<fw:border>
			<fw:SolidStroke color="0xCCCCCC" />
		</fw:border>
	</fw:Rect>
	
	<fw:Label horizontalPadding="10" text="Kiva juttu tässä!" verticalPadding="3" id="labelDisplay" align="center" horizontalCenter="0" verticalCenter="0" />
	
	
	
</fw:Skin>