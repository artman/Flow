<fw:Skin xmlns:fx="http://ns.adobe.com/mxml/2009"
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:fw="http://artman.fi/flow" 
		 height="16" width="200" xmlns:mx="library://ns.adobe.com/flex/mx">	
	
	<fx:Metadata>
		[HostComponent("com.flow.components.HScrollBar")]
	</fx:Metadata>
	
	<fw:states>
		<s:State name="up" />
		<s:State name="disabled" />
	</fw:states>
	
	
	<fw:Button id="decreaseButton" width="16" height="100%">
		<fw:skinClass>
			<fx:Component>
				<fw:Skin xmlns:fx="http://ns.adobe.com/mxml/2009"
						 xmlns:s="library://ns.adobe.com/flex/spark" 
						 xmlns:fw="http://artman.fi/flow">	
					
					<fx:Metadata>
						[HostComponent("com.flow.components.Button")]
					</fx:Metadata>
					
					<fw:states>
						<s:State name="up" />
						<s:State name="over" />
						<s:State name="down" />
						<s:State name="disabled" />
					</fw:states>
					
					<fw:Rect width="100%" height="100%" radius="0" >
						<fw:fill>
							<fw:GradientFill rotation="90">
								<fw:GradientData color="0xF9F9F9" color.over="0xF7F7F7" color.down="0xEEEEEE" ratio="0" />
								<fw:GradientData color="0xDDDDDD" color.over="0xCCCCCC" color.down="0xBBBBBB" color.disabled="0xFFFFFF" ratio="1" />
							</fw:GradientFill>
						</fw:fill>
						<fw:stroke>
							<fw:SolidStroke thickness="1" caps="none" joints="round" color="0xBBBBBB" color.over="0xAAAAAA" color.down="0x888888" color.disabled="0xDDDDDD" />
						</fw:stroke>
					</fw:Rect>
					
					<fw:Shape verticalCenter="0" x="5" width="6" height="7">
						<mx:Point  x="0" y="3.5" /><mx:Point x="6" y="0" /><mx:Point x="6" y="7" />
						<fw:fill>
							<fw:SolidFill color="0" />
						</fw:fill>
					</fw:Shape>
					
				</fw:Skin>
			</fx:Component>
		</fw:skinClass>
	</fw:Button>
	
	<fw:Rect id="track" width="100%" height="100%" left="16" right="16" >
		<fw:fill>
			<fw:GradientFill rotation="90">
				<fw:GradientData color="0xAAAAAA" ratio="0" />
				<fw:GradientData color="0xDDDDDD" ratio="0.4" />
			</fw:GradientFill>
		</fw:fill>
		<fw:stroke>
			<fw:SolidStroke thickness="1" caps="none" joints="round" color="0xBBBBBB" />
		</fw:stroke>
	</fw:Rect>

	<fw:Button id="thumb" x="0" y="0" width="30" height="100%" >
		<fw:skinClass>
			<fx:Component>
				<fw:Skin xmlns:fx="http://ns.adobe.com/mxml/2009"
						 xmlns:s="library://ns.adobe.com/flex/spark" 
						 xmlns:fw="http://artman.fi/flow">	
					
					<fx:Metadata>
						[HostComponent("com.flow.components.Button")]
					</fx:Metadata>
					
					<fw:states>
						<s:State name="up" />
						<s:State name="over" />
						<s:State name="down" />
						<s:State name="disabled" />
					</fw:states>
					
					<fw:Rect width="100%" height="100%" radius="0" >
						<fw:fill>
							<fw:GradientFill rotation="90">
								<fw:GradientData color="0xF9F9F9" color.over="0xF7F7F7" color.down="0xEEEEEE" ratio="0" />
								<fw:GradientData color="0xDDDDDD" color.over="0xCCCCCC" color.down="0xBBBBBB" color.disabled="0xFFFFFF" ratio="1" />
							</fw:GradientFill>
						</fw:fill>
						<fw:stroke>
							<fw:SolidStroke thickness="1" caps="none" joints="round" color="0xBBBBBB" color.over="0xAAAAAA" color.down="0x888888" color.disabled="0xDDDDDD" />
						</fw:stroke>
					</fw:Rect>
				</fw:Skin>
			</fx:Component>
		</fw:skinClass>
	</fw:Button>
	
	<fw:Button id="increaseButton" right="0" width="16" height="100%">
		<fw:skinClass>
			<fx:Component>
				<fw:Skin xmlns:fx="http://ns.adobe.com/mxml/2009"
						 xmlns:s="library://ns.adobe.com/flex/spark" 
						 xmlns:fw="http://artman.fi/flow">	
					
					<fx:Metadata>
						[HostComponent("com.flow.components.Button")]
					</fx:Metadata>
					
					<fw:states>
						<s:State name="up" />
						<s:State name="over" />
						<s:State name="down" />
						<s:State name="disabled" />
					</fw:states>
					
					<fw:Rect width="100%" height="100%" radius="0" >
						<fw:fill>
							<fw:GradientFill rotation="90">
								<fw:GradientData color="0xF9F9F9" color.over="0xF7F7F7" color.down="0xEEEEEE" ratio="0" />
								<fw:GradientData color="0xDDDDDD" color.over="0xCCCCCC" color.down="0xBBBBBB" color.disabled="0xFFFFFF" ratio="1" />
							</fw:GradientFill>
						</fw:fill>
						<fw:stroke>
							<fw:SolidStroke thickness="1" caps="none" joints="round" color="0xBBBBBB" color.over="0xAAAAAA" color.down="0x888888" color.disabled="0xDDDDDD" />
						</fw:stroke>
					</fw:Rect>
					
					<fw:Shape verticalCenter="0" x="6" width="6" height="7">
						<mx:Point  x="6" y="3.5" /><mx:Point x="0" y="0" /><mx:Point x="0" y="7" />
						<fw:fill>
							<fw:SolidFill color="0" />
						</fw:fill>
					</fw:Shape>
					
				</fw:Skin>
			</fx:Component>
		</fw:skinClass>
	</fw:Button>
	
</fw:Skin>
